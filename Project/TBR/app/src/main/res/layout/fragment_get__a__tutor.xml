<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.student.getatutor.Get_A_Tutor">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">



            <TextView
                android:id="@+id/textView_TBR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ULC TBR"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginTop="15dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="200dp"

                    android:layout_marginRight="25dp"

                    android:text="MENU ">

                </TextView>

                <Spinner
                    android:id="@+id/spinner_homeMenu"
                    android:layout_width="136dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp" />

            </LinearLayout>

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingTop="120dp">

            <TextView
                android:id="@+id/textView_get_a_tutor"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="Get A Tutor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView_date"

                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginTop="0dp"

                    android:text="Select Week"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-20dp"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/spinner_week"
                        android:layout_width="125dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="0dp"
                        android:background="#C8C8C8"
                        android:popupBackground="#C8C8C8"
                        android:spinnerMode="dropdown"
                        android:textColor="#000000"
                        />

                    <Button
                        android:id="@+id/button_prevWeek"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Prev" />

                    <Button
                        android:id="@+id/button_nextWeek"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Next" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textView_subject"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Subject"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <Spinner
                    android:id="@+id/spinner_subject"
                    android:layout_width="200dp"
                    android:layout_height="25dp"
                    android:background="#C8C8C8"
                    android:popupBackground="#C8C8C8"
                    android:spinnerMode="dropdown"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/textView_course"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"

                    android:text="Course"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <Spinner
                    android:id="@+id/spinner_course"
                    android:layout_width="200dp"
                    android:layout_height="25dp"
                    android:background="#C8C8C8"
                    android:popupBackground="#C8C8C8"
                    android:spinnerMode="dropdown"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/textView_session"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Sessions Available" />

                <ListView
                    android:id="@+id/listView_timeblock"
                    android:layout_width="match_parent"
                    android:layout_height="153dp"
                    android:layout_marginTop="0dp"
                    android:scrollbars="vertical" />

                <ScrollView
                    android:id="@+id/get_A_Tutor_scroll"
                    android:layout_width="match_parent"
                    android:layout_height="190dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <GridView
                            android:id="@+id/get_A_Tutor_calendar"
                            android:layout_width="match_parent"
                            android:layout_height="1320dp"
                            android:columnWidth="45dp"
                            android:gravity="center"
                            android:listSelector="#0f0"
                            android:numColumns="8"
                            android:stretchMode="columnWidth"
                            android:visibility="visible" />
                    </LinearLayout>
                </ScrollView>

            </LinearLayout>

            <Button
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:id="@+id/confirm_calendar"
                android:text="Calendar"
                android:layout_marginTop="160dp"
                android:layout_marginLeft="300dp"
                />




        </RelativeLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>


